<?xml version="1.0" encoding="utf-8" ?>
<xf:BottomBarPage
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:xf="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
            mc:Ignorable="d"
            BackgroundColor="#111"
            BarBackgroundColor="Black"
            xmlns:views="clr-namespace:testSpotify.Views"
            NavigationPage.HasNavigationBar="False"
            x:Class="testSpotify.Views.MainPage"
            x:Name="BBPage"
            x:FieldModifier="public">

    <xf:BottomBarPage.Children>

        <NavigationPage Title="Home" Icon="ic_home.png">
            <x:Arguments>
                <views:HomePage Title="Home" 
                                 Icon="ic_home.png"
                                 NavigationPage.HasNavigationBar="False" />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Player" Icon="ic_play.png">
            <x:Arguments>
                <views:PlayerPage Title="Player" 
                                  Icon ="ic_action_play.png"
                                  NavigationPage.HasNavigationBar="False"
                    />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Lyrics" Icon="ic_lyrics.png">
            <x:Arguments >
                <views:LyricsPage Title="Lyrics" 
                                 Icon="ic_lyrics.png"
                                 NavigationPage.HasNavigationBar="False"
                     />
            </x:Arguments>
        </NavigationPage>

    </xf:BottomBarPage.Children>

</xf:BottomBarPage>

